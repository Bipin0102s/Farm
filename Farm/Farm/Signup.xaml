<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm.Signup">
    <StackLayout VerticalOptions="Center" Padding="20">

        <Image Source="logo.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center"/>
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" TextColor="Black" BackgroundColor="White"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" TextColor="Black" BackgroundColor="White"/>
        <Button Text="Sign Up" BackgroundColor="Green" TextColor="White" Clicked="OnSignUpClicked"/>
        </StackLayout>

</ContentPage>