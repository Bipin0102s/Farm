<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm.SignInPage"
              NavigationPage.HasBackButton="False">
    <StackLayout VerticalOptions="Center" Padding="20">
        <Entry x:Name="UserEntry" Placeholder="User" Keyboard="Default" TextColor="Black" BackgroundColor="White"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" TextColor="Black" BackgroundColor="White"/>
        <Button Text="Login" BackgroundColor="Green" TextColor="White" Clicked="OnLoginClicked"/>
        <Button Text="New User? Click here to Sign up"  BackgroundColor="White" TextColor="Black" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>