                <StackLayout Grid.Row="2" Grid.Column="3" HorizontalOptions="Center">
                    <ImageButton Source="https://cdn-prod.medicalnewstoday.com/content/images/articles/276/276714/red-and-white-onions.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Onion"/>
                    <Label Text="Onion" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>

