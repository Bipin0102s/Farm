<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm.AllCrops">
    <StackLayout Padding="10">
        <Label Text="Crops" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,10"/>

        <ScrollView>
            <Grid ColumnDefinitions="*,*,*,*" RowSpacing="10" ColumnSpacing="10">
                <!-- Row 1 -->
                <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                    <ImageButton Source="https://www.bhg.com/thmb/CW7wrStDiGAaHprdDT7dYIgnz8c=/1500x0/filters:no_upscale():strip_icc()/when-to-harvest-corn-for-sweetest-ears-6749235-01-2e11a328ae9f4ee5a0f531af74e67cc0.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Corn"/>
                    <Label Text="Corn" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                    <ImageButton Source="https://cdn.prod.website-files.com/64ee3e35d7a51cef2aafb1e4/64ee3e35d7a51cef2aafb26f_IMG_8146.JPG"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Rice"/>
                    <Label Text="Rice" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="2" HorizontalOptions="Center">
                    <ImageButton Source="https://cdn.mos.cms.futurecdn.net/iC7HBvohbJqExqvbKcV3pP-1200-80.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Wheat"/>
                    <Label Text="Potato" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="3" HorizontalOptions="Center">
                    <ImageButton Source="https://images.immediate.co.uk/production/volatile/sites/10/2018/03/2048x1365-Best-strawberries-to-grow-LI1834878-9b05a14.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Strawberry"/>
                    <Label Text="Strawberry" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>

                <!-- Row 2 -->
                <StackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
                    <ImageButton Source="https://images.pexels.com/photos/1367242/pexels-photo-1367242.jpeg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Tomato"/>
                    <Label Text="Tomato" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Center">
                    <ImageButton Source="https://milletbank.in/cdn/shop/articles/pexels-deep-malik-132129520-10738421.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Potato"/>
                    <Label Text="Millet" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.Column="2" HorizontalOptions="Center">
                    <ImageButton Source="https://www.hhs1.com/hubfs/carrots%20on%20wood-1.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Carrot"/>
                    <Label Text="Carrot" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.Column="3" HorizontalOptions="Center">
                    <ImageButton Source="https://cdn.britannica.com/77/170677-050-F7333D51/lettuce.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Lettuce"/>
                    <Label Text="Lettuce" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>

                <!-- Row 3 -->
                <StackLayout Grid.Row="2" Grid.Column="0" HorizontalOptions="Center">
                    <ImageButton Source="https://d2jx2rerrg6sh3.cloudfront.net/images/news/ImageForNews_745986_16823072833517897.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Soybean"/>
                    <Label Text="Soybean" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="Center">
                    <ImageButton Source="https://gardenalchemyseeds.ca/cdn/shop/files/DSC_6256.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Peanut"/>
                    <Label Text="Peanut" FontSize="12" HorizontalTextAlignment="Center"/>
