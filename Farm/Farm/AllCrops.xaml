                <StackLayout Grid.Row="2" Grid.Column="2" HorizontalOptions="Center">
                    <ImageButton Source="https://blog.jungseed.com/wp-content/uploads/2020/05/Main-scaled.jpg"
                                 BackgroundColor="Transparent" Aspect="AspectFit" WidthRequest="70" HeightRequest="70"
                                 Clicked="OnCropClicked" CommandParameter="Pepper"/>
                    <Label Text="Pepper" FontSize="12" HorizontalTextAlignment="Center"/>
